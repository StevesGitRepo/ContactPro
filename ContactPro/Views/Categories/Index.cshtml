@model IEnumerable<ContactPro.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-blue"><img src="~/img/CategoryFiles.png" width="40px" class="pb-2 me-2" />Categories</h1>

<div class="row mt-5">
    <div class="col-md-3 text-start mb-2">
        <a class="btn btn-primary w-100" asp-action="Create">
            <strong>
                Create A New Category
            </strong>
        </a>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th colspan="2">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="d-flex justify-content-end">
                            <a class="me-3 editIcons" asp-action="Description" asp-route-id="@item.Id"><i class="bi bi-file-text-fill" title="Description"></i></a>
                            <a class="me-3 editIcons" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill" title="Edit"></i></a>
                            <a class="me-3 editIcons" asp-action="EmailCategory" asp-route-id="@item.Id"><i class="bi bi-envelope-fill" title="Email"></i></a>
                            <a class="editIcons text-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill" title="Delete"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <!--Sweet Alerts-->
    <script>
        let message = '@(ViewBag.SwalMessage)';

        if (!message.includes("Error") && message != '') {
            Swal.fire({
                backdrop: false,
                icon: 'success',
                title: message,
                showConfirmButton: true
            })
        } else if (message.includes("Error")) {
            Swal.fire({
                backdrop: false,
                icon: 'error',
                title: 'Oops...',
                text: message
            })
        }
    </script>
    }
