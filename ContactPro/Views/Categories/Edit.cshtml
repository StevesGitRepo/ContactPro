@model ContactPro.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-blue"><img src="~/img/EditImage.png" width="32px" class="pb-2 me-2" />Edit Category</h1>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" class="mt-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AppUserId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" maxlength="20"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group text-end mt-2">
                <input type="submit" value="Save" class="btn btn-primary rounded-pill btnlinks" />
            </div>
        </form>
    </div>
    <div class="col-12">
        <form asp-action="Edit" class="mt-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AppUserId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <textarea asp-for="Name" id="Category Details" class="form-control" rows="3" />
                @*<span asp-validation-for="Name" class="text-danger"></span>*@
            </div>
            <button type="submit" class="btn btnprimary rounded-pill btnlinks">Save Description</button>
        </form>


    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
