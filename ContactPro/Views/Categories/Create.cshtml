@model ContactPro.Models.Category

<h1 class="text-blue"><img src="~/img/CreateImage2.png" width="32px" class="pb-2 me-2"/>Create A Category</h1>

<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="form-label">Enter a category name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="input-group">
                <label asp-for="Description" class="form-label">Category Description</label>
                <text-area class="form-control"></text-area>
            </div>
            <div class="form-group text-start mt-3">
                <input type="submit" value="Create" class="btn btn-primary rounded-pill btnlinks" maxlength="1000"/>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
