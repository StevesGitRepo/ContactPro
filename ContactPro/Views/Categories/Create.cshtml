@model ContactPro.Models.Category

        <h1 class="text-blue"><img src="~/img/CreateImage2.png" width="32px" class="pb-2 me-2 text-center mt-3" />Create A Category</h1>

<hr />
<div class="row mx-1">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="form-label">Category Name</label>
                <input asp-for="Name" class="form-control shadow-sm" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label mt-2">Category Description</label>
                <textarea asp-for="Description" class="form-control shadow-sm" id="Description" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group text-start mt-3">
                <input type="submit" value="Create" class="btn btn-primary btnlinks" maxlength="1000" />
            </div>
            <div class="mt-3 mb-3">
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
